generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Barber {
  id         String   @id
  name       String
  user       User     @relation(fields: [user_id], references: [id])
  user_id    String   @unique
  created_at DateTime
  updated_at DateTime
}

model User {
  id         String   @id
  email      String   @unique
  password   String
  created_at DateTime
  updated_at DateTime
  Barber     Barber?
}
